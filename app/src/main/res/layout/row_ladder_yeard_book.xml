<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="0dp"
    android:weightSum="2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <com.rey.material.widget.ProgressView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                app:pv_autostart="true"
                app:pv_circular="true"
                app:pv_progressMode="indeterminate"
                app:pv_progressStyle="@style/InOutColorsCircularProgressDrawableStyle" />


            <duxeye.com.entourage.customViews.SquareLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_ladder_grid_photo_left"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:cropToPadding="false"
                    android:scaleType="centerCrop" />

            </duxeye.com.entourage.customViews.SquareLayout>



        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_ladder_yearbook_title_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rrrrrr"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Page Title Left"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textColor" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <com.rey.material.widget.ProgressView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                app:pv_autostart="true"
                app:pv_circular="true"
                app:pv_progressMode="indeterminate"
                app:pv_progressStyle="@style/InOutColorsCircularProgressDrawableStyle" />


            <duxeye.com.entourage.customViews.SquareLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_ladder_grid_photo_right"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:cropToPadding="false"
                    android:scaleType="centerCrop" />

            </duxeye.com.entourage.customViews.SquareLayout>



        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_ladder_yearbook_title_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rrrrrr"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Page Title Right"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textColor" />
    </LinearLayout>
</LinearLayout>
